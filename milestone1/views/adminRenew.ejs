<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scholar Renewal Applications</title>
    <!-- CSS only -->
    <link rel="stylesheet" type="text/css" href="/css/admin.css"></style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/897c51c62d.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
	<script src = "/js/pictureValidation.js"></script>
</head>

<body>

    <div class="bg">
		<!-- Navbar -->
		<%- include('partials/adminNavbar') %>

        <div class="container">
            <h1 class="light-font">Scholarship Renewal Applications</h1>
			<div>
                <ul class="invalid-msg">
                  <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
                    <li><%= error.message %></li>
                  <% }) %> <% } %>
                </ul>
            </div>
        </div>

        <div class="container"> 
            <div id="favorites-container" class="row row-cols-2 row-cols-md-3 row-cols-xl-5 g-2">
                <!-- scholars -->
                <% if (applications.length > 0) { %> <% for(var app of applications) { %>
                    <div class="col mb-1">
                        <div class="card h-100">
							<div class="card-header"><%= app.date_submitted %></div>
                            <div class="card-body">
                                <!-- makes the card clickable -->
								<!-- [TODO] turn into /admin/scholars/:id -->
                                <a href="/admin/scholars/<%= app.id %>"><h5 class="card-title"><%= app.fullname %></h5></a>
								<h6 class="card-subtitle text-muted"><%= app.scholar_type %></h6>
								<h6 class="card-subtitle text-muted"><%= app.university %></h6>
								<div class="link-container">
									<a href="<%= app.eaf %>" class="card-link" target=”_blank”><i class="fa-solid fa-file-arrow-down"></i>&nbsp;&nbsp;EAF</a>
    								<a href="<%= app.grades %>" class="card-link" target=”_blank”><i class="fa-solid fa-file-arrow-down"></i>&nbsp;&nbsp;Grades</a>
								</div>
								
								<div class="form-container">
									<form name = "renew-scholarship-approve" action ="/admin/renew-scholarship-approve"  method = "POST" enctype="multipart/form-data">
										<div class="form-group">
											<input type=file accept="application/pdf" id="loe" name="loe" class="form-control btn-margin" required />
											<input type=text id="appId" name="appId" value="<%= app.app_id %>" class="form-control" style="display: none">
										</div>
										<div class="text-center submit-btn">
											<input class="form-control btn btn-success btn-margin" type="submit"  value="Approve" />
										</div>
									</form>
									<form name = "renew-scholarship-reject" action="/admin/renew-scholarship-reject" method="POST">
										<div class="text-center submit-btn">
											<input type=text id="app-id" name="appId" value="<%= app.app_id %>" class="form-control" style="display: none">
											<input class="form-control btn btn-danger btn-margin" type="submit"  value="Reject" />
										</div>
									</form>
								</div>
                            </div>
                        </div>
                    </div>
                <% } %>  <% } %>
            </div>
        </div>

    <!-- JavaScript Bundle with Popper -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>

</body>
</html>