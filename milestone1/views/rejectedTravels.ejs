<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rejected Travel Abroad</title>
    <!-- CSS only -->
    <link rel="stylesheet" type="text/css" href="/css/admin.css"></style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/897c51c62d.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
	<script src = "/js/pictureValidation.js"></script>
</head>

<body>

    <div class="bg">
		<!-- Navbar -->
		<%- include('partials/adminNavbar') %>

        <div class="container">
            <h1 class="light-font">Rejected Travel Abroad Applications</h1>
        </div>

        <div class="container"> 
            <div id="favorites-container" class="row row-cols-2 row-cols-md-3 row-cols-xl-5 g-2">
                <!-- scholars -->
                <% for(var app of applications) { %>
                    <div class="col mb-1">
                        <div class="card h-100">
							<div class="card-header"><%= app.date_status_changed %></div>
                            <div class="card-body">
                                <!-- makes the card clickable -->
								<!-- [TODO] turn into /admin/scholars/:id -->
                                <a href="/admin/scholars/profile"><h5 class="card-title"><%= app.scholar %></h5></a>
								<h6 class="card-subtitle text-muted"><%= app.type %></h6>
								<h6 class="card-subtitle text-muted"><%= app.school %></h6>
                                <div class="d-flex flex-row">
                                    <p class="card-text fw-semibold">Date Submitted:&nbsp;&nbsp;</p>
                                    <p class="card-text"><%= app.date_submitted %></p>
                                </div>
                                <div class="d-flex flex-row">
                                    <p class="card-text fw-semibold">Checked By:&nbsp;&nbsp;</p>
                                    <p class="card-text"><%= app.checked_by %></p>
                                </div>
								<div class="link-container">
									<a href="<%= app.loi %>" class="card-link" target=”_blank”><i class="fa-solid fa-file-arrow-down"></i>&nbsp;&nbsp;LOI</a>
    								<a href="<%= app.dou %>" class="card-link" target=”_blank”><i class="fa-solid fa-file-arrow-down"></i>&nbsp;&nbsp;DOU</a>
                                    <a href="<%= app.itr %>" class="card-link" target=”_blank”><i class="fa-solid fa-file-arrow-down"></i>&nbsp;&nbsp;ITR</a>
								</div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>

    <!-- JavaScript Bundle with Popper -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>

</body>
</html>