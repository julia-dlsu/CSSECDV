</head>

<body>
    <div class="bg">
		<!-- Navbar -->
		<nav class="navbar navbar-expand-lg navbar-dark shadow-5-strong bg-body-tertiary">
			<div class="container-fluid">
				<a class="navbar-brand thick light-font" href="/">DOST-SEI</a>
			  	<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			  	</button>
			  	<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
				  		<li class="nav-item">
							<a class="nav-link light-font" href="/admin/dashboard">Home</a>
				  		</li>
                        <li class="nav-item">
							<a class="nav-link light-font" href="/admin/renew-scholarship">Scholarship Renewal</a>
				  		</li>
				  		<li class="nav-item">
