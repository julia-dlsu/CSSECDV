<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, intial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie-edge">
  <title>Library</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
</head>

<body>
  <a href="/users/logout" class="btn btn-primary" role="button">Logout</a>
  <a href="/users/dashboard" class="btn btn-primary" role="button">another page</a>
  <button id="showTextButton">ANOTHER TEST BUTTON</button>
  <p id="displayText" style="display: none;">This is the text that will be shown when the button is clicked.</p>

  <ul class="invalid-msg">
    <% if(messages.timeout_msg) { %>
    <li><%= messages.timeout_msg %></li>
    <% } %>
  </ul>
 
  <h1>Hello</h1>
 
  <script>
    document.addEventListener('click', function() {
        // Send request to server to update session's last activity timestamp
        fetch('/update-session-activity')
          .then(response => {
            if (!response.ok) {
              throw new Error('Failed to update session activity');
            }
          })
          .catch(error => {
            console.error('Error updating session activity:', error);
          });
      });
        // Add event listener for button clicks
      document.getElementById('showTextButton').addEventListener('click', function() {
      // Display the hidden text
          var displayText = document.getElementById('displayText');
        
        // Toggle the display of the hidden text
        if (displayText.style.display === 'none') {
            displayText.style.display = 'block';
        } else {
            displayText.style.display = 'none';
        }
        fetch('/update-session-activity')
          .then(response => {
            if (!response.ok) {
              throw new Error('Failed to update session activity');
            }
          })
          .catch(error => {
            console.error('Error updating session activity:', error);
          });
    });


   </script>
</body>

</html>