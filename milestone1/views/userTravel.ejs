<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scholar Renewal Applications</title>
    <!-- CSS only -->
    <link rel="stylesheet" type="text/css" href="/css/admin.css"></style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/897c51c62d.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
	<script src = "/js/pictureValidation.js"></script>
</head>

<body>

    <div class="bg">
		<!-- Navbar -->
		<%- include('partials/userNavbar') %>

        <div class="container">
            <h1 class="light-font">Travel Abroad Applications</h1>
			<div>
                <ul class="invalid-msg">
                  <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
                    <li><%= error.message %></li>
                  <% }) %> <% } %>
                </ul>
            </div>
        </div>

        <div class="container container-margin">
            <!-- Create an Announcement -->
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-outline-light" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Apply
            </button>
        </div>
    
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Apply to Travel Abroad</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <!-- Form to apply -->
                    <form name="travel-abroad" action ="/users/travel-abroad-apply" method = "POST" enctype="multipart/form-data">
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="eaf" >Upload Letter of Intent</label>
                                <input type=file accept="application/pdf" id="loi" name="loi" class="form-control btn-margin" required />
                                <label for="grades" >Upload Deed of Undertaking</label>
                                <input type=file accept="application/pdf" id="dou" name="dou" class="form-control btn-margin" required />
                                <label for="grades" >Upload Co-Maker's ITR</label>
                                <input type=file accept="application/pdf" id="itr" name="itr" class="form-control btn-margin" required />
                            </div>
                            <div id="announcementHelpInline" class="form-text">
                                Please ensure that you have double checked the documents you are submitting. Once submitted, you cannot edit the information you have submitted.
                            </div>
                            <div id="announcementHelpInline" class="form-text">
                                Please ensure that you do not currently have pending applications. Multiple submissions may result in your application being rejected.
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="container"> 
            <div id="favorites-container" class="row row-cols-2 row-cols-md-3 row-cols-xl-5 g-2">
                <!-- applications -->
                <% for(var app of applications) { %>
                    <div class="col mb-1">
                        <div class="card h-100">
							<div class="card-header">
                                <p class="card-text float-start qty"><%= app.date_submitted %></p>
                                <% if (app.status === 'Pending') { %>
                                    <form name="travel-abroad-delete" action ="/users/travel-abroad-delete" method = "POST">
                                        <input type=text id="appId" name="appId" value="<%= app.id %>" class="form-control" style="display: none">
                                        <button type="submit" class="btn ripple float-end remove"><i class="fa fa-trash"></i></button>
                                    </form>
                                <% } %>
                            </div>
                            <div class="card-body">
                                <h6 class="card-subtitle <%= app.status %>"><%= app.status %></h6>
								<div class="link-container">
									<a href="<%= app.letter_of_intent %>" class="card-link" target=”_blank”><i class="fa-solid fa-file-arrow-down"></i>&nbsp;&nbsp;LOI</a>
    								<a href="<%= app.deed_of_undertaking %>" class="card-link" target=”_blank”><i class="fa-solid fa-file-arrow-down"></i>&nbsp;&nbsp;DOU</a>
                                    <a href="<%= app.comaker_itr %>" class="card-link" target=”_blank”><i class="fa-solid fa-file-arrow-down"></i>&nbsp;&nbsp;ITR</a>
								</div>
                                <div class="link-container">
                                    <% if (app.status === 'Approved') { %>
                                        <a href="<%= app.approve_document %>" class="card-link" target=”_blank”><i class="fa-solid fa-file-arrow-down"></i>&nbsp;&nbsp;Permit to Travel</a>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>

    <!-- JavaScript Bundle with Popper -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>

</body>
</html>