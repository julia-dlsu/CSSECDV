<body>
	<div class="bg">
		<!-- Navbar -->
		<%- include('partials/adminNavbar') %>

		<!-- Login -->
		<div class="container h-100 d-flex align-items-center justify-content-center main-body">
			<div class="container shadow-5-strong">
				<div class= "form-container">
					<h2 class="light-font">Admin Login</h2>
					<div>
						<ul class="valid-msg">
							<% if(messages.success_msg) { %>
							<li><%= messages.success_msg %></li>
							<% } %>
						</ul>
			
						<ul class="invalid-msg">
							<% if (messages.error) { %>
							<li><%= messages.error %></li>
							<% } %>
						</ul>
					</div>
		
					<form name = "Login" action ="/admin/login"  method = "POST">
						<div class="form-group">
							<label for="email" >Email</label>
							<input type=text id="email" name = "email" class="form-control" placeholder ="Email" minlength = "3" maxlength = "200" onchange="return checkEmail()" required>
						</div>	
				
						<div class = "form-group">
							<label for="password" >Password: </label>
							<input type=password id="password" name="password" class="form-control" maxlength= "32" placeholder= "Password" required>
						</div>	
				
						<div class= "form-group btn d-flex align-items-center justify-content-center admin-btn">
							<input class = "form-control btn btn-primary" type="submit" value ="Login">
						</div>
							
					</form>
				</div>
			</div>
		</div>
	</div>

