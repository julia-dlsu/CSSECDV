    <script src = "/js/emailValidation.js"></script>
</head>

<body>
  <div class="bg">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark shadow-5-strong bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand thick light-font" href="/">DOST-SEI</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link light-font" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link light-font" href="/users/login">Login</a>
            </li>
          </ul>
          <div class="d-flex">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <a href="https://www.facebook.com/DOST.SEI" target="_blank" class="social light-font"><i class="fa-brands fa-facebook-f"></i></a>
              <a href="https://www.science-scholarships.ph" target="_blank" class="social light-font"><i class="fa-solid fa-earth-americas"></i></a>
            </ul>
          </div>
        </div>
      </div>
    </nav>

    <div class="container h-100 d-flex align-items-center justify-content-center main-body">
      <!-- Main -->
      <div class="container h-100 d-flex align-items-center justify-content-center flex-column">
        <div class="container"><h1 class="fs-1 light-font">DOST-SEI Undergraduate Scholarships</h1></div>
        <div class="container"><p class="fw-medium fs-5 light-font">Your hub for organized scholarship management. Stay on top of announcements, deadlines, and requirements effortlessly. Maximize your opportunities for academic success with us!</p></div>
      </div>
  
      <!-- Register -->
      <div class="container shadow-5-strong">
        <div class="form-container">
          <h2 class="light-font"> Sign-Up</h2>
          <div>
            <ul class="invalid-msg">
              <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
                <li><%= error.message %></li>
              <% }) %> <% } %>
            </ul>
          </div>
    
          <form name = "Register" action="/users/register" method="POST" enctype="multipart/form-data">
          
            <div class="form-group">	
              <label for = "fname">First Name: </label>
              <input type=text name = "fname" id="fname" class = "form-control" minlength = "1" maxlength = "32" placeholder="First Name" pattern = "[a-zA-ZÑñÉé]+([ \-']{0,1}[a-zA-ZÑñÉé]+){0,2}[.]{0,1}" required /> 
            </div>	
    
            <div class="form-group">	
              <label for = "lname">Last Name: </label>
              <input type=text name = "lname" id="lname" class = "form-control" minlength = "1" maxlength = "32" placeholder="Last Name"  pattern = "[a-zA-ZÑñÉé]+([ @\-']{0,1}[a-zA-ZÑñÉé]+){0,2}[.]{0,1}" required /> 
            </div>	
          
            <div class="form-group">
              <label for = "email">Email: </label>
              <input type=email name = "email" id ="email" class = "form-control" placeholder="Email" minlength = "3" maxlength = "64" onchange="return checkEmail()" required /> 
            </div>
    
            <div class="form-group">
              <label for = "phone">Phone Number: </label>
              <input type=text name = "phone" id = "phone" class = "form-control" placeholder = "09*********" pattern = "09\d{9}" required /> 
            </div>
      
            <div class="form-group">		
              <label for= "uname">Username: </label>
              <input type=text name = "uname" id = "uname" class = "form-control" minlength = "1" maxlength = "64" placeholder = "Username" pattern = "[a-zA-Z0-9ÑñÉé.,!$%&#?^_\-+;:]{1,64}" required /> 
            </div>	
      
            <div class="form-group">		
              <label for= "password">Password: </label> 
              <input type=password name ="password" id ="password"class = "form-control" minlength= "8" maxlength= "32" placeholder="Password" required />	
            </div>
    
            <div class="form-group">		
              <label for= "cpass">Confirm Password: </label> 
              <input type=password name ="cpass" id ="cpass"class = "form-control" minlength= "8" maxlength= "32" placeholder="Confirm Password" required />	
            </div>
          
            <div class="form-group">
              <label for ="image">Upload Profile Picture: </td>
              <div style="height: 0px; overflow: hidden;">
                <input type=file accept="image/*" id="image" name="image" onchange="return validPicture()" required />
              </div>
              <button type="button" class="btn btn-secondary btn-sm" onclick="uploadImg()">Upload Image</button>
            </div>
      
            <div class="text-center submit-btn">
              <input class="form-control btn btn-primary" type="submit"  value="Register" />
            </div>
          </form>
        
          <div class="form-group light-font">Have an account already? <a href = "/users/login"> Login</a></div>
    
        </div>
      </div>
    </div>

  </div>

  <!-- JavaScript Bundle with Popper -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>

</body>
</html>
